<%= link_to "Home", root_path %>


<div class="organization-<%= organization.id %> container"
    style="border: 1px solid black; padding: 1em; margin: 1em;">
  <div id="<%= dom_id organization %>">
    <p>
      <strong>Name:</strong>
      <%= organization.name %>
    </p>

    <p>
      <strong>About:</strong>
      <%= organization.about %>
    </p>

    <p>
      <strong>Phone:</strong>
      <%= organization.phone %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= organization.email %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= render organization.addresses %> 
    </p>

    <p>
    <strong>Hours:</strong>
    <%= render organization.hours %>
    </p>

    <p>
    <strong>Services:</strong>
      <%= organization.services.map { |service| service.capitalize}.to_sentence %> 
    </p>

  </div>
</div>


