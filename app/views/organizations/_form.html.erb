 <div class="container">
 <%= form_with(model: organization) do |form| %>
   <% if organization.errors.any? %>
     <div style="color: red">
       <h2><%= pluralize(organization.errors.count, "error") %> prohibited this organization from being saved:</h2>
 
       <ul>
         <% organization.errors.each do |error| %>
           <li><%= error.full_message %></li>
         <% end %>
       </ul>
     </div>
   <% end %>
 
   <div>
     <%= form.label "Add a logo"%><br>
     <%= form.file_field :avatar %>
   </div><br>
  
   <div>
     <%= form.label :name, style: "display: block" %>
     <%= form.text_field :name %>
   </div><br>
 
   <div>
     <%= form.label :about, style: "display: block" %>
     <%= form.text_area :about %>
   </div>
     <div>
     <%= form.label :phone, style: "display: block" %>
     <%= form.text_field :phone %>
   </div>
 
   <div>
     <%= form.label :email, style: "display: block" %>
     <%= form.text_field :email %>
   </div> 
   <div>
     <%= form.label :services, style: "display: block" %>
     <%= form.text_field :services %>
   </div> 

   <br>

    <h4>Services Provided: </h4>
  <% Organization::SERVICES_PROVIDED.each do |key| %>
    <%= form.check_box :services, { multiple: true, checked: form.object.services&.include?(key) }, key, nil %>
    <%= form.label key %>
  <% end %>
 
        <h4>Addresses</h4>
     
 <%= form.fields_for :addresses do |addresses|%>
   <div class="row">
     <div class="col">
       <%= form.label :street, style: "display: block" %>
       <%= form.text_field :street %>
     </div>
     <div class="col">
       <%= form.label :city, style: "display: block" %>
       <%= form.text_field :city %>
     </div>
     <div class="col">
       <%= form.label :state, style: "display: block" %>
       <%= form.text_field :state %>
     </div>
     <div class="col">
       <%= form.label "Zip Code", style: "display: block" %>
       <%= form.text_field :zip %>
     </div>
   </div>
 <%end %>
 <br>
 <h4> Operating Hours </h4>
 
 <%= form.fields_for :hours do |hours|%>
   <div class="row">
     <div class="col">
       <%= hours.label :day, style: "display: block" %>
       <%= hours.text_field :day %>
     </div>
     <div class="col">
       <%= hours.label :opens, style: "display: block" %>
       <%= hours.text_field :opens %>
     </div>
     <div class="col">
       <%= hours.label :closes, style: "display: block" %>
       <%= hours.text_field :closes %>
     </div>
   </div><br>
 <% end %>
 
 
 
  
 
 <div>
   <%= form.submit %>
 </div>
<% end %>
 



